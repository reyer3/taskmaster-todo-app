# Variables de entorno para TaskMaster Todo App

# Base de datos
DATABASE_URL="postgresql://user:password@neon-host:5432/database?sslmode=require"

# JWT
JWT_SECRET="your-secret-key-here"
JWT_EXPIRATION="1d"
JWT_REFRESH_EXPIRATION="7d"

# Servidor
PORT=4000
NODE_ENV=production
CORS_ORIGIN="https://your-production-url.vercel.app"

# Notificaciones
ENABLE_NOTIFICATIONS=true

# Vercel
VERCEL=1

# Frontend (Vite)
VITE_API_URL="/api"
