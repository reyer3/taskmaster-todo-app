# Variables de entorno para el despliegue en urbanlink.pe

# Base de datos
DATABASE_URL=postgresql://user:password@neon-host:5432/database?sslmode=require

# JWT
JWT_SECRET=your-secret-key-here
JWT_EXPIRATION=1d
JWT_REFRESH_EXPIRATION=7d

# CloudFlare (para certificados SSL)
CLOUDFLARE_EMAIL=your-email@example.com
CLOUDFLARE_API_KEY=your-cloudflare-global-api-key

# Docker compose project name (opcional)
COMPOSE_PROJECT_NAME=taskmaster

# No modificar estas variables en producci√≥n
NODE_ENV=production
CORS_ORIGIN=https://taskmaster.urbanlink.pe
ENABLE_NOTIFICATIONS=true
ENABLE_WEBSOCKETS=true
